.rimg-item p{box-sizing:border-box;position: absolute;left: 0%;bottom: 0px;width: 100%;padding:4px;max-height:70px;line-height:22px;font-size: 16px;word-wrap: break-word;word-break: break-all;overflow:hidden;background:rgba(0,0,0,0.5);}
.rimg-item span{position: absolute;left: 2%;bottom: 7px;font-size:12px;}
.r-nav{width: 100%;display: flex;display: flexbox;border-bottom: 1px solid #ccc;}
.r-nav li{position:relative;flex-grow:1;width: 33.3%;height: 49px;box-sizing:border-box; line-height: 49px;text-align: center;font-size: 18px;font-weight:bold;color: #010101;}
.r-nav li.active{border-bottom: 2px solid #04be02;color: #04be02;}
.r-nav li i{position:absolute;right:0;top:8px;width:1px;height:33px;background:#ccc;}
.rsub-nav{width: 94%;min-height:29px;padding: 0 3% 8px;border-bottom: 1px solid #ccc;}
.rsub-nav li{display: block;float:left;width: 23%;height: 24px;margin:8px 1% 0;text-align: center;line-height: 24px;color:#333;font-size: 14px;overflow:hidden;cursor:pointer}
.rsub-nav li.active{background: #04be02;color: #fff;border-radius: 20px;}
