/*************article_recommend************/
.rimg-wrap{display: flexbox;display: flex;width: 100%;border-bottom: 1px solid #ccc;}
.rimg-item{position: relative;box-sizing:border-box; flex-grow:1;width: 50%;max-height:200px;color: #fff !important;}
.rimg-item:nth-child(1){margin-right: 1px;}
.rimg-item img{width: 100%;max-height:inherit;display: block;}
