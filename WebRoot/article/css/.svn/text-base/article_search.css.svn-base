/*************article_search************/
.search-wrap{width:100%;height:50px;padding-top:10px;border-bottom:1px solid #ccc;}
.search-wrap img{display:block;max-width:12%;max-height:40px;float:left;margin-left:2%;}
.search-wrap input,.search-wrap button{box-sizing:border-box;display:block;float:left;height:40px;border-radius:8px;font-size:18px;outline:none;}
.search-wrap input{width:62%;margin:0 2%;padding-left:36px;border:1px solid #ccc;border-radius:12px;background:url(../images/icon-search.png)#f4f4f4 no-repeat 10px 9px;background-size:20px;color:#666;}
.search-wrap button{width:18%;background:#04be02;border:none;color:#fff;font-size:18px;padding:0px;}
.search-none{margin-top:50px;text-align:center;color:#999;font-size:18px;}

