body{
    background:#00b6cc;
}
.list{
    margin:1.5em 1em;
    color:#fff;
}
.list img{
    float:left;
    height:3em;
    padding-top:1em;
}
.list .desc{
    margin-left:4em;
}
.list .desc .title{
    font-size:18px;
    line-height:2em;
}
.list .desc .cont{
    font-size:16px;
    color:#c3eef6;
}

.calling{
    margin-top:4em;
}
.calling p{
    width:44%;
    /*float:left;*/
    display:inline-block;
    background:#f6f6f6;
    color:#00b6cc;
    font-size:20px;
    line-height:1.5em;
    text-align:center;
}
.calling img{
    width:25%;
    margin-left:-1em;
}